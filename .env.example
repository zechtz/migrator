# Oracle Database Configuration
ORACLE_HOST=host
ORACLE_PORT=1521
# Use either SID or SERVICE_NAME (not both)
ORACLE_SID=brs4g
# ORACLE_SERVICE_NAME=your_service_name
ORACLE_USER=user
ORACLE_PASSWORD=password

# PostgreSQL Database Configuration
# POSTGRES_HOST=localhost
POSTGRES_HOST=localhost # Use 'postgres' for Docker, 'localhost' for local
POSTGRES_PORT=5432
POSTGRES_DATABASE=rita_new
POSTGRES_USER=postgres
POSTGRES_PASSWORD=secret

POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DATABASE=rita_new
POSTGRES_USER=postgres
POSTGRES_PASSWORD=secret

# Migration Settings
BATCH_SIZE=1000
MAX_RETRIES=3
RETRY_DELAY=5000
CHECKPOINT_FILE=migration_checkpoint.json

# Concurrency Settings
MAX_CONCURRENT_BATCHES=4
MAX_CONCURRENT_TABLES=2
MAX_CONCURRENT_CONNECTIONS=10

# Pagination Strategy (rownum|offset|cursor)
PAGINATION_STRATEGY=rownum
CURSOR_COLUMN=id

# Logging
LOG_LEVEL=info
LOG_FILE=migration.log

# Environment
NODE_ENV=production

